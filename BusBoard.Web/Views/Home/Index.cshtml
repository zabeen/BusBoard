@model BusBoard.Web.Models.PostcodeSelection
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>BusBoard</h1>
    <p class="lead">For all your bus info needs. Enter a postcode below and click enter to see bus times for that location.</p>
</div>

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("BusInfo", "Home", FormMethod.Get))
        {
            <fieldset>
                <legend>Post Code (required):</legend>
                @Html.TextBoxFor(m => m.Postcode, new { required = "required" })
            </fieldset>

            <fieldset>
                <legend>Number of Stops (optional):</legend>
                @Html.TextBoxFor(m => m.NumberOfStops)
            </fieldset>

            <input type="submit" value="Get Bus Info" />		
        }
    </div>
</div>